<span {{bindAttr class=":toggle-icon node.children.length::leaf"}} {{action 'toggle'}}>
    {{#if isExpanded}}
        &#x25BC;
    {{else}}
        &#x25B6;
    {{/if}}
</span>
<a class="text" {{action 'didClick'}}>{{node.text}}</a>
<a class="text add-child" {{action 'addChild' node}}>&oplus;</a>
<a class="text remove-node" {{action 'removeNode' node}}>&minus;</a>

{{#if isExpanded}}
    {{#each child in node.children}}
        {{! if you try with childToAdd="addChild" the tree-node component addChild
        function loops two times for one action, why?
        And why it's work well with removeNode function ??
        }}
        {{tree-node node=child childToAdd="addChild0" nodeToRemove="removeNode"}}
    {{/each}}
{{/if}}